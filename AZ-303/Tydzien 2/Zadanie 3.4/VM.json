{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminpassword":{
            "type": "securestring"
        },
        "adminLogin": {
            "type": "string"
            }

    },
    "functions": [],
    "variables": {},
    "resources": [

   

      {
        "name": "Contoso-WWW-VM01-NIC",
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2019-11-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
    
        ],
        "tags": {
            "Owner": "Mateusz",
            "Created": "2021-03-20"
        },
        "properties": {
            "ipConfigurations": [
                {
                    "name": "ipConfig1",
                    "properties": {
                        "privateIPAllocationMethod": "Dynamic",
                        "publicIPAddress": {
                            "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'Contoso-WWW-VM01-PublicIP')]"
                        },
                        
                        "subnet": {
                            "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'Contoso-WWW-VNET', 'Conotoso-Sub-10.0.0.0')]"
                        }
                    }
                }
            ]
        }
    },
    {
        "name": "Contoso-WWW-VM01",
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2019-07-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/networkInterfaces', 'Contoso-WWW-VM01-NIC')]"
        ],
        "tags": {
            "Owner": "Mateusz",
            "Created": "2021-03-20"
        },
        "properties": {
            "hardwareProfile": {
                "vmSize": "Standard_D2s_v3"
            },
            "osProfile": {
                "computerName": "Contoso-WWW-VM01",
                "adminUsername": "[parameters('adminLogin')]",
                "adminPassword": "[parameters('adminpassword')]"
            },
            "storageProfile": {
                "imageReference": {
                    "publisher": "Canonical",
                    "offer": "UbuntuServer",
                    "sku": "18.04-LTS",
                    "version": "latest"
                },
                "osDisk": {
                    "name": "Contoso-WWW-VM01-OSDisk",
                    "caching": "ReadWrite",
                    "createOption": "FromImage"
                }
            },
            "networkProfile": {
                "networkInterfaces": [
                    {
                        "id": "[resourceId('Microsoft.Network/networkInterfaces', 'Contoso-WWW-VM01-NIC')]"
                    }
                ]
            }
            
        }
    },
     {
